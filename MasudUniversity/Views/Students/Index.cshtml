@model IEnumerable<MasudUniversity.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Student Information</h1>

<p class="d-flex justify-content-end">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p class=form-control"">
        Find by name or Email: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-success" />
    </p>
}
<table class="table table-hover table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nationality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Religion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MartialStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Batch)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-white">
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Religion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MartialStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Batch)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.StudentId">Details</a> |*@
                <a class="btn btn-success" asp-action="Detailsudpated" asp-route-id="@item.StudentId">GradeDetails</a> |

                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex justify-content-end">
    <ul class="pagination pagination-sm">
        @for (int i = 1; i <= ViewBag.Total; i++)
        {
            if (i == ViewBag.currentPage)
            {
                <li class="page-item active">
                    @Html.ActionLink(i.ToString(), "Index", "Students", new { page = i }, new { @class = "page-link" })
                </li>
            }
            else
            {
                <li class="page-item">
                    @Html.ActionLink(i.ToString(), "Index", "Students", new { page = i }, new { @class = "page-link" })
                </li>
            }

        }
    </ul>
</div>

